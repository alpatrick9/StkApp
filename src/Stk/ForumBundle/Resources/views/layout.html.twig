{% extends "::base.html.twig"%}
{% block body %}
    <!-- Main -->

    <div class="container">
        <div class="row">
            <div class="4u 12u(narrower)">
                <div id="sidebar">

                    <!-- Sidebar -->
                    <ul>
                        <li><a href="{{ path('forum_home') }}">Tous les sujets</a></li>
                        <li><a href="{{ path('create_subject') }}">Creer sujet</a></li>
                    </ul>

                </div>
            </div>
            <div class="8u  12u(narrower) important(narrower)">
                <div id="content">
                    {% block forum_body %} {% endblock %}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
{% block javascripts %}
    <script>
        var nav = document.getElementById("forumNav");
        nav.className +="current";
    </script>
{% endblock %}